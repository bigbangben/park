<?xml version="1.0" encoding="utf-8"?>
<lanyotech.cn.park.component.TopBarPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topBarPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    topBarRes="$layout.topbar_ad_list"
    android:orientation="vertical" >

	<ScrollView 
	    android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_bg_"
	    >
        <LinearLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <lanyotech.cn.park.component.GraphicImageView
                android:id="@+id/adBImage"
                android:layout_width="match_parent"
                android:layout_height="189dp" />

            <TextView
                android:id="@+id/adNameText"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center"
                 android:textColor="@color/adNameTextColor"
                android:textSize="19sp" />
            
             <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:contentDescription="@null"
                android:src="@drawable/common__iv__dotted_line" />

            <TextView
                android:id="@+id/adDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/assessAppContentColor"
                android:layout_marginTop="10dp"
                android:textSize="12sp" />

            <lanyotech.cn.park.layout.HomeList
                android:id="@+id/homeList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
	</ScrollView>
</lanyotech.cn.park.component.TopBarPanel>