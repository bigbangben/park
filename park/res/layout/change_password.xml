<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e0da"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="1dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common__vg_bg__input"
            android:orientation="vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="1dp"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/input_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:inputType="text"
                    android:hint="@string/changePassword_hintInputOldPassWord"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="13sp" 
                    android:password="true">

                    <requestFocus />
                </EditText>
            </LinearLayout>


            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@drawable/common__vg_bg__input"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp" 
               android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    

                    <EditText
                        android:id="@+id/input_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@null"
                        android:hint="@string/changePassword_hintInputNewPassWord"
                        android:inputType="text"
                        android:textColor="#999999"
                        android:textColorHint="#999999"
                        android:textSize="13sp"
                        android:password="true" />
                </LinearLayout>
            </LinearLayout>

            <CheckBox
                android:id="@+id/showPasswordOrNot"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="显示密码" 
                android:textColor="#79a095"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"/>

            <Button
                android:id="@+id/change_confirm_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/register_btn"
                android:text="@string/changePassword_confirmChange"
                android:textColor="#ffffff"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>