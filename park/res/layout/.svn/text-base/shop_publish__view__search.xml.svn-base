<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_vg_baseVerticalPadding"
    android:paddingLeft="@dimen/common_vg_baseHorizontalPadding"
    android:paddingRight="@dimen/common_vg_baseHorizontalPadding"
    android:paddingTop="@dimen/common_vg_baseVerticalPadding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common__vg_bg__input"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1dp" >

        <RelativeLayout
            android:id="@+id/sPublish_vg_name"
            android:layout_width="match_parent"
            android:layout_height="42dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="@string/sPublish_tv_name"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sPublish_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="2dp"
                android:background="@null"
                android:gravity="left"
                android:inputType="text"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12sp" >

                <!--<requestFocus />-->
            </EditText>

            <TextView
                android:id="@+id/sPublish_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/sPublish_et_name"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:hint="@string/sPublish_et_hintEnterShopName"
                android:textColorHint="#999999"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:contentDescription="@null"
            android:src="@drawable/common__iv__dotted_line" />

        <RelativeLayout
            android:id="@+id/sPublish_vg_category"
            android:layout_width="match_parent"
            android:layout_height="42dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="@string/sPublish_tv_type"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/sPublish_rf_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/commonicon_down" />

            <TextView
                android:id="@+id/sPublish_tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55dp"
                android:layout_toLeftOf="@id/sPublish_rf_category"
                android:text="@string/common_text_sampleNormal"
                android:textColor="#333333"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:contentDescription="@null"
            android:src="@drawable/common__iv__dotted_line" />

        <RelativeLayout
            android:id="@+id/sPublish_vg_region"
            android:layout_width="match_parent"
            android:layout_height="42dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="@string/sPublish_tv_area"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/sPublish_rf_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/commonicon_down" />
            
            <TextView
                android:id="@+id/sPublish_tv_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55dp"
                android:layout_toLeftOf="@id/sPublish_rf_region"
                android:text="@string/common_text_sampleNormal"
                android:textColor="#333333"
                android:textSize="12sp" />
            
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/sPublish_btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/common__btn_bg__sel"
        android:text="@string/sPublish_btn_search"
        android:textColor="#ffffff"
        android:textSize="17sp" />

</LinearLayout>