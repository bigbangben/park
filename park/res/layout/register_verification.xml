<?xml version="1.0" encoding="utf-8"?>
<lanyotech.cn.park.layout.RegisterVerificationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <lanyotech.cn.park.component.TopBarPanel
        android:id="@+id/topBarPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        topBarRes="$layout.topbar_register"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e3e0da"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp" >

            <TextView
                android:id="@+id/register_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/register_tv_phone"
                android:textColor="#999999"
                android:textColorHint="#999999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/common__vg_bg__input"
                    android:orientation="vertical"
                    android:paddingBottom="1dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="1dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/listicon_mobile" />

                        <EditText
                            android:id="@+id/register_et_vcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="@null"
                            android:hint="@string/register_et_vcode"
                            android:textColor="#999999"
                            android:textColorHint="#999999"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/register_tv_resend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="9.43"
                        android:drawableRight="@drawable/commonicon_right"
                        android:gravity="center_vertical"
                        android:text="@string/register_tv_resend"
                        android:textColor="#999999"
                        android:textColorHint="#999999" />
                </LinearLayout>

                <Button
                    android:id="@+id/register_btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/common__btn_bg__sel"
                    android:text="@string/register_btn_register"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />
            </LinearLayout>
        </RelativeLayout>
    </lanyotech.cn.park.component.TopBarPanel>

</lanyotech.cn.park.layout.RegisterVerificationView>